{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/api/*": ["pages/api/*"],
			"@/components/*": ["components/*"],
			"@/constants/*": ["constants/*"],
			"@/context/*": ["context/*"],
			"@/utils/*": ["utils/*"],
			"@/types/*": ["types/*"],
			"@/returns/*": ["types/returns/*"],
			"@/hooks/*": ["hooks/*"],
			"@/models/*": ["models/*"],
			"@/gql": ["graphql/index.ts"],
			"@/apollo": ["apollo/init.ts"],
			"styles/*": ["styles/*"],
			"@/shared/*": ["../shared/*"]
		},
		"incremental": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
